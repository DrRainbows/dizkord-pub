rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // === USERS ===
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // === GROUPS ===
    match /groups/{groupId} {
      // members can read; non-members can also read (needed to join by ID)
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      // members can update freely;
      // non-members can ONLY add themselves to the members array (join flow)
      allow update: if request.auth != null && (
        request.auth.uid in resource.data.members
        || (
          request.auth.uid in request.resource.data.members
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['members'])
        )
      );
      allow delete: if request.auth != null && resource.data.owner == request.auth.uid;

      // --- TEXT/VOICE CHANNELS ---
      match /channels/{channelId} {
        allow read, write: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;

        // --- MESSAGES IN CHANNELS ---
        match /messages/{messageId} {
          allow read: if request.auth != null
            && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
          allow create: if request.auth != null
            && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members
            && request.resource.data.uid == request.auth.uid;
          // author can update/delete anything; any member can update reactions + pinned
          allow update: if request.auth != null
            && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members
            && (
              resource.data.uid == request.auth.uid
              || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reactions', 'pinned'])
            );
          allow delete: if request.auth != null
            && resource.data.uid == request.auth.uid;
        }

        // --- TYPING INDICATORS ---
        match /typing/{uid} {
          allow read: if request.auth != null
            && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
          // users can only write/delete their own typing indicator
          allow write: if request.auth != null
            && request.auth.uid == uid
            && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        }

        // --- VOICE PRESENCE ---
        match /voicePresence/{odcId} {
          allow read, write: if request.auth != null
            && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        }

        // --- WEBRTC SIGNALING ---
        match /signaling/{sigId} {
          allow read, write: if request.auth != null
            && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        }

        // --- SPINNER SESSION ---
        match /session/{sessionId} {
          allow read, write: if request.auth != null
            && request.auth.uid in get(/databases/$(database)/documents/groups/$(groupId)).data.members;
        }
      }
    }

    // === DIRECT MESSAGES ===
    match /dms/{dmId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;
      allow delete: if false;

      match /messages/{messageId} {
        allow read: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/dms/$(dmId)).data.participants;
        allow create: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/dms/$(dmId)).data.participants
          && request.resource.data.uid == request.auth.uid;
        // author can update/delete; any participant can update reactions
        allow update: if request.auth != null
          && request.auth.uid in get(/databases/$(database)/documents/dms/$(dmId)).data.participants
          && (
            resource.data.uid == request.auth.uid
            || request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reactions'])
          );
        allow delete: if request.auth != null
          && resource.data.uid == request.auth.uid;
      }
    }
  }
}
